<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MenuFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_large"
        android:alpha="0.3"
        android:src="@drawable/paperplanes"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_menu_time_best"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_small"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="@string/fragment_menu_time_best"
                    />

                <TextView
                    android:id="@+id/fragment_menu_distance_best"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="@string/fragment_menu_distance_best"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_menu_item_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/fragment_menu_item_start"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/fragment_menu_item_achievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/fragment_menu_item_achievements"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/fragment_menu_item_leaderboards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/fragment_menu_item_leaderboards"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_menu_time_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_small"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="@string/fragment_menu_time_previous"
                    />

                <TextView
                    android:id="@+id/fragment_menu_distance_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="@string/fragment_menu_distance_previous"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_menu_signInView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/fragment_menu_sign_in_text"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_medium"
                />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/fragment_menu_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_menu_signOutView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_menu_welcome_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_medium"
                />

            <TextView
                android:id="@+id/fragment_menu_sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:text="@string/fragment_menu_sign_out"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_medium"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>